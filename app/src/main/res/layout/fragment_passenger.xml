<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/scrollRouteListContainer"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/rounded_background"
    android:fillViewport="true"
    android:layout_margin="16dp"
    android:padding="16dp">

    <LinearLayout
        android:id="@+id/scrollRouteList"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="8dp"
        android:gravity="center_horizontal">

        <!-- Card Layout for Driver Details -->
        <LinearLayout
            android:id="@+id/driverDetails"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp"
            android:visibility="gone"
            android:layout_marginVertical="8dp"
            android:background="@drawable/rounded_card"
            android:elevation="4dp">
            <TextView
                android:id="@+id/tvDriverNameDetails"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Nombre del conductor"
                android:textColor="@color/black"
                android:textSize="18sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tvFareDetails"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Tarifa: $100"
                android:textColor="@color/black"
                android:textSize="14sp"
                android:layout_marginTop="4dp" />

            <TextView
                android:id="@+id/tvPhoneNumberDetails"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="TelÃ©fono: +52 123 456 7890"
                android:textColor="@color/gray"
                android:textSize="12sp"
                android:layout_marginTop="4dp" />

            <TextView
                android:id="@+id/tvTimeRemaining"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Tiempo restante: 10 min"
                android:textColor="@color/black"
                android:textSize="14sp"
                android:layout_marginTop="8dp" />

            <TextView
                android:id="@+id/tvCarPlate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Placa: ABC-123"
                android:textColor="@color/black"
                android:textSize="14sp"
                android:layout_marginTop="8dp" />

            <TextView
                android:id="@+id/tvCarModel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Modelo: Nissan Versa"
                android:textColor="@color/black"
                android:textSize="14sp"
                android:layout_marginTop="4dp" />

            <TextView
                android:id="@+id/tvCarColor"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Color: Azul"
                android:textColor="@color/black"
                android:textSize="14sp"
                android:layout_marginTop="4dp" />
            <!-- Cancel Button -->
            <Button
                android:id="@+id/btnCancel"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Cancelar"
                android:backgroundTint="@color/colorPrimary"
                android:layout_weight="1"
                android:textColor="@android:color/white"
                android:layout_gravity="center"
                android:elevation="2dp" />
        </LinearLayout>

    </LinearLayout>

</ScrollView>
