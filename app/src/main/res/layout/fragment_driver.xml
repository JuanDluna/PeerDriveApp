<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/rounded_background"
    android:padding="16dp">

    <LinearLayout
        android:id="@+id/llSettingDriver"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <EditText
            android:id="@+id/etPassengers"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="NÃºmero de pasajeros"
            android:inputType="number"
            android:textColorHint="@android:color/darker_gray"
            android:textColor="@color/black"/>

        <EditText
            android:id="@+id/etFare"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Cuota a cobrar"
            android:inputType="numberDecimal"
            android:textColorHint="@android:color/darker_gray"
            android:textColor="@color/black"
            android:layout_marginTop="16dp" />

        <Button
            android:id="@+id/btnStartCountdown"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Iniciar cuenta regresiva"
            android:textColor="@color/white"
            android:layout_marginTop="16dp" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/llCountdown"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:visibility="gone">

        <TextView
            android:id="@+id/tvCountdown"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Tiempo restante: 15:00"
            android:textSize="16sp"
            android:gravity="center"
            android:layout_marginTop="16dp" />

        <Button
            android:id="@+id/btnCancelTrip"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Cancelar viaje"
            android:layout_marginTop="16dp" />

        <Button
            android:id="@+id/btnStartTrip"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Iniciar viaje"
            android:layout_marginTop="16dp"
            android:visibility="gone"
            />

    </LinearLayout>
</LinearLayout>
